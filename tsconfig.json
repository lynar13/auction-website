{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@js/*": ["src/js/*"],
      "@css/*": ["src/css/*"],
      "@images/*": ["public/images/*"],
      "@api/*": ["src/js/api/*"],
      "@ui/*": ["src/js/ui/*"],
      "@router/*": ["src/js/router/*"],
      "@utils/*": ["src/js/utilities/*"],
      "@types/*": ["src/js/types/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
